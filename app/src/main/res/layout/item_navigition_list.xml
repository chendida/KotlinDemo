<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_navigation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_nav_color_tv"
        android:textSize="@dimen/textSize_titleSmall"
        tools:text="@string/app_name"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_navigation_flow_layout"
        app:layout_constraintTop_toBottomOf="@+id/item_navigation_tv"
        android:padding="@dimen/dp_12"
        app:max_select="0"
        />
</android.support.constraint.ConstraintLayout>